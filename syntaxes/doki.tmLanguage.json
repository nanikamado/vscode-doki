{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "doki",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.doki",
                    "match": "\\b(data|match|with|let|in|end)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.doki",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.doki",
                    "match": "\\\\."
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.decimal.doki",
            "match": "\\b\\d[\\d_]*(\\.?)[\\d_]*\\b"
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.doki",
                    "match": "\\?|\\+|-|\\~|\\!|\\=|\\*|%|<|>|!|&|\\^|\\||:|\\\\|/|\\."
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.doki",
                    "match": "//.*"
                }
            ]
        }
    },
    "scopeName": "source.doki"
}